<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <title>Tudulist</title>
  </head>
  <body>
    <header>

      <% if (task == null) { %>
        <h1>TUDU LIST</h1>
          <form action="/create" method="post">
            <input type="text" name="task" id="task" placeholder="Nova tarefa">
            <button id="addButton" type="submit">Adicionar</button>
          </form> 
      <% } else { %>
        <h1>EDITAR TUDU</h1>
          <form action="/updateOne/<%= task._id %>" method="post">
            <input type="text" name="task" id="task" value="<%= task.task %>">
            <button id="updateButton" type="submit">Atualizar</button>
          </form>
      <% } %>
    </header>
  
    <section id="tasks">
        <ul>
          <% tasklist.forEach( (task ) => { %>
          <li>
              <div>
                  <a href="/"><%= task.task %> </a>
                  <span>Em <%= task.date.toLocaleDateString( 'pt-BR') %></span>
              </div>
              <div>
                <a href="/getById/<%= task._id%>/updateOne"><i class="bi bi-pencil-square"></i></a>
                <a href="/getById/<%= task._id%>/deleteOne"><i class="bi bi-trash"></i></a>
              </div>
              
                
            </li>
          <% }) %>
        </ul>
  </section>

  <% if ( taskDelete != null ) { %>
    
          <section id="modal">
            <div id="card">
              <a href="/">x</a>
              <h2>Confirmar</h2>
              <hr>
              <p>Deleta essa bagaça: <%= taskDelete.task %>?</p>
              <a href="/">Não</a>
              <a href="/deleteOne/<%= taskDelete._id%>">Sim</a>
            </div>
          </section>
  <% } %>
  

    <script src="script.js"></script>
  </body>
</html>
